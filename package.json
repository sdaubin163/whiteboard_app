{
  "name": "whiteboard_app",
  "version": "0.0.0",
  "private": true,
  "main": "dist/app/main.js",
  "scripts": {
    "dev": "npm run build && npm run start-electron",
    "start-electron": "electron .",
    "copy-resources": "node scripts/copyResources.js",
    "clean": "rimraf dist/*",
    "build": "npm run clean && npm run copy-resources && tsc -b &&  run-p \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "pack": "tsc && electron-builder --dir",
    "pack-mac": "npx electron-builder --mac",
    "dist": "tsc && electron-builder"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "ng-whiteboard": "^3.0.3",
    "pinia": "^2.1.7",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/tsconfig": "^0.5.0",
    "electron": "^28.0.0",
    "fs-extra": "^11.2.0",
    "less": "^4.2.0",
    "npm-run-all2": "^6.1.1",
    "rimraf": "^5.0.5",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25"
  },
  "build": {
    "appId": "chatgpt.sdaubin.com",
    "icon": "src/app/assets/icon.icns",
    "files": [
      "dist/app/**/*",
      "dist/vue/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/app/assets/icon.png"
    },
    "win": {
      "icon": "src/app/assets/icon.ico"
    }
  }
}
