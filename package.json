{
  "name": "whiteboard_app",
  "version": "0.0.0",
  "private": true,
  "main": "dist/app/main.js",
  "scripts": {
    "dev": "npm run build && npm run start-electron ",
    "dev-vue-in-electron": "npm run build-vue && npm run start-electron ",
    "start-vue-only": "cd src/vue && npm run dev",
    "start-electron": "electron .",
    "copy-resources": "node scripts/copyResources.js",
    "clean": "rimraf dist/*",
    "build": "npm run clean && npm run build-react && npm run build-vue && npm run build-app",
    "build-app": "npm run copy-resources && tsc -b",
    "build-react": "cd src/react && npm run build",
    "build-vue": "cd src/vue && npm run build",
    "pack": "tsc && electron-builder --dir",
    "pack-mac": "npm run clean && npm run build &&npx electron-builder --mac",
    "dist": "tsc && electron-builder"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "lodash": "^4.17.21",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^18.19.3",
    "electron": "^28.1.0",
    "fs-extra": "^11.2.0",
    "less": "^4.2.0",
    "npm-run-all2": "^6.1.1",
    "rimraf": "^5.0.5",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "typescript": "~5.3.0"
  },
  "build": {
    "appId": "chatgpt.sdaubin.com",
    "icon": "src/app/assets/icon.icns",
    "files": [
      "dist/app/**/*",
      "dist/vue/**/*",
      "dist/utils/**/*",
      "dist/react/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/app/assets/icon.png"
    },
    "win": {
      "icon": "src/app/assets/icon.ico"
    }
  }
}
